<?xml version="1.0" encoding="UTF-8"?>
<phpunit
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="phpunit.xsd"
	xmlns=""
	bootstrap="bootstrap.php"
	colors="true"
	verbose="true"
	stderr="true">
	<coverage>
		<include>
			<directory suffix=".php">../Application</directory>
			<directory suffix=".php">../Auth</directory>
			<directory suffix=".php">../Cache</directory>
			<directory suffix=".php">../Controllers</directory>
			<directory suffix=".php">../CurlRequest</directory>
			<directory suffix=".php">../DataBase</directory>
			<directory suffix=".php">../Email</directory>
			<directory suffix=".php">../ErrorHandler</directory>
			<directory suffix=".php">../Exceptions</directory>
			<directory suffix=".php">../Model</directory>
			<directory suffix=".php">../Request</directory>
			<directory suffix=".php">../Routing</directory>
			<directory suffix=".php">../Tools</directory>
			<directory suffix=".php">../Traits</directory>
			<directory suffix=".php">../Validators</directory>
			<directory suffix=".php">../View</directory>
		</include>
	</coverage>
	<testsuites>
		<testsuite name="All">
			<directory>../Tests</directory>
		</testsuite>
	</testsuites>
	<php>
		<ini name="error_reporting" value="2147483647"/>
		<ini name="display_errors" value="1"/>
		<ini name="display_startup_errors" value="1"/>
	</php>
</phpunit>
